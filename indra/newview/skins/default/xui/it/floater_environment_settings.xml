<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="Environment Editor Floater" title="Impostazioni ambiente">
	<check_box label="Usa sempre impostazioni lotto/regione." name="use_env_from_region_always" tool_tip="Questa opzione fissa l&apos;ambiente sempre alle impostazioni qui sotto"/>
	<radio_group name="region_settings_radio_group">
		<radio_item label="Usa impostazioni regione" name="use_region_settings"/>
		<radio_item label="Personalizza ambiente" name="use_my_settings"/>
	</radio_group>
	<panel name="user_environment_settings">
		<text name="note1">
			Nota: gli altri utenti non vedranno
		</text>
		<text name="note2">
			le tue impostazioni personalizzate.
		</text>
		<text name="water_settings_title">
			Acqua
		</text>
		<combo_box name="water_settings_preset_combo">
			<combo_box.item label="-Selezionare preset-" name="item0"/>
		</combo_box>
		<text name="sky_dayc_settings_title">
			Cielo (fisso/ciclo diurno)
		</text>
		<radio_group name="sky_dayc_settings_radio_group">
			<radio_item label="Cielo fisso" name="my_sky_settings"/>
			<radio_item label="Ciclo" name="my_dayc_settings"/>
		</radio_group>
		<combo_box name="sky_settings_preset_combo">
			<combo_box.item label="-Selezionare preset-" name="item0"/>
		</combo_box>
		<combo_box name="dayc_settings_preset_combo">
			<combo_box.item label="-Selezionare preset-" name="item0"/>
		</combo_box>
	</panel>
	<button label="Annulla" name="cancel_btn"/>
</floater>
